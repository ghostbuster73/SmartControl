{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "options": {
        "cwd": "${workspaceRoot}/../build"
    },
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", 
                "Unix Makefiles", 
                "-DCMAKE_BUILD_TYPE=Debug", 
                "../SmartControl/"
            ]     
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": [
                 "-j",  
                 "8"
            ],   
        },
        {
            "label": "Build",
            "dependsOn": ["cmake", "make"],
            "group": "build"
        }
    ]
}